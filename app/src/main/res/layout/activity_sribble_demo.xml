<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <Button
        android:id="@+id/button_scribble_touch_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scribble Touch Helper Demo" />

    <Button
        android:id="@+id/button_surfaceview_stylus_scribble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scribble SurfaceView Demo"/>

    <Button
        android:id="@+id/button_webview_stylus_scribble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scribble WebView Demo"/>

    <Button
        android:id="@+id/button_touch_screen_scribble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scribble Touch Screen Demo"/>

    <Button
        android:id="@+id/button_move_erase_scribble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scribble Move Erase Demo"/>

    <Button
        android:id="@+id/button_multiple_scribble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scribble Multiple View"/>

    <Button
        android:id="@+id/button_save_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scribble Save Points"/>

    <Button
        android:id="@+id/button_hwr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scribble Recognition"/>
    <Button
        android:id="@+id/button_gradeBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Gradebook"/>
    <Button
        android:id="@+id/button_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Recycler"/>
</LinearLayout>